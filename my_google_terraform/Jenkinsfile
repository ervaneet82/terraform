pipeline {
  agent any
  environment {
    SVC_ACCOUNT_KEY = credentials('google-terraform')
  }
  stages {
    stage('Checkout') {
      steps {
      sh 'echo $SVC_ACCOUNT_KEY | base64 -b 64 > ./my_google_terraform/google.json'
      }
    }
  stage('TF Plan') {
      steps {
          sh '''
            cd my_google_terraform
            terraform init'
            terraform plan -out myplan
          '''
      }
    }
  }
}
